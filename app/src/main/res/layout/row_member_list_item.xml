<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/row_member_list_item_imv_icon"
            android:layout_width="@dimen/imageView_width"
            android:layout_height="@dimen/imageView_height"
            android:src="@color/backgroundColor"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/row_member_list_item_imv_icon"
            android:layout_toStartOf="@+id/row_member_list_item_ib_expandArrow"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/row_member_list_item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andrei Mares"
                android:textStyle="bold"
                android:textSize="@dimen/list_item_title"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_member_item_subtitle"
                android:textSize="@dimen/secondary_text"
                android:textColor="@color/black"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/row_member_list_item_ib_expandArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/arrow_down_float"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>